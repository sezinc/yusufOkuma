        android:text="a"
        android:onClick="basA"/>

    <Button
        android:id="@+id/btnk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="k"
        android:onClick="basK"/>


    </LinearLayout>
    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
